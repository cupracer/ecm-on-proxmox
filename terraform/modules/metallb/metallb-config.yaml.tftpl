apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: ${pool_name}
  namespace: metallb-system
spec:
  addresses:
  - ${address_range}
  autoAssign: true
---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: ${l2advertisement_name}
  namespace: metallb-system
spec:
  ipAddressPools:
  - ${pool_name}

